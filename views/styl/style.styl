#elevator-screen

  .widget-header
    
    #user-left
      font-size 11px
      color #999
    
    #user-right
      font-size 11px
      margin-left 7px
      color #999
      
    #user-middle
      margin-left -17px
      font-size 18px
    
    #debug-inspect
      margin-left -4px
      font-size 12px
      color rgba(255,255,255,.8)
      text-shadow 0px 1px 1px #222
      
  .subnavbar
    
    li
      #admin-key
        font-size 18px
        line-height 46px
        margin 0 0 0 -23px
        color #ccc

  .clear
    clear both
    
  input[type="file"]
    line-height 14px
    margin-top 7px
  
  .hide-overflow
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  
  .navbar 
    .brand
      padding 0 20px
    
      img
        margin -3px 0 0 0
    
      span
        margin 0 0 0 10px
      
    .user-info
      padding 0 7px

  .account-container
    form
      h1
        position relative
        height 109px
        margin-bottom 20px
        
        img#logo
          position absolute
          top -48px
          left 50%
          margin-left -51px
          z-index 20

        #logo-bkg
          border-radius 51px
          width 102px
          height 102px
          background-color #f9f9f9
          position absolute
          top -52px
          left 50%
          margin-left -51px
          z-index 18
          clip rect(0px,102px,36px,0px)
        	
        #logo-bkg:before
        	box-sizing border-box
        	display block
        	border 1px solid #d5d5d5
        	width 100%
        	height 100%
        	border-radius 50%
        	content: ''

  .shortcuts

    #forecast-shortcut
      position relative
    
      #sun
        font-size 38px
        position absolute
        top 1px
        left -3px
      
      #cloud
        margin-left 5px
        font-size 27px
        margin-bottom 0
        display block
        
    #inspect-icon
      color rgba(255,255,255,.7)
      text-shadow 0px 1px 1px #222
      margin-left -16px
      font-size 24px

  #feeds-section, #users-section
    margin 30px 0 0 0
  
  .action-table
  
    .td-actions
      min-width 110px
      
    .td-status
      width 70px
    
      em.active
        font-weight bold
        color #5bb75b
      em.disabled
        color #da4f49
  
  #setting-forecast
  
    #setting-forecast-map
      height 400px